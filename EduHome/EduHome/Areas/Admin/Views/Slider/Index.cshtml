@model List<Slider>
@{
    ViewData["Title"] = "Index";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Databasede olan slider modeller</h4>
           
                        <div class="table-responsive pt-3">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>
                                           #
                                        </th>
                                        <th>
                                          Image
                                        </th>
                                        <th>
                                           Title
                                        </th>
                                        <th>
                                            Description
                                        </th>
                                        <th>
                                            Action
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var slider in Model)
                                    {
                                    <tr class="table-info">
                                        <td>
                                            @slider.Id
                                        </td>
                                        <td>
                                       <img src="~/img/slider/@slider.BackgroundImage" style="width:100px;height:100px;" />
                                        </td>
                                        <td>
                                            @slider.Title
                                        </td>
                                        <td>
                                            @slider.Description
                                        </td>
                                        <td>
                                            <a class="btn btn-primary mb-2" style=" width:150px;"asp-controller="slider" asp-action="Index">Detail</a> 
                                            <a class="btn btn-secondary mb-2" style=" width:150px;" asp-controller="slider" asp-action="update" asp-route-id="@slider.Id">Update</a>
                                            <a class="btn btn-danger" style=" width:150px; " asp-controller="slider" asp-action="delete" asp-route-id="@slider.Id">Delete</a>
                                        </td>

                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

