                                <label for="exampleInputUsername1">Social</label>
                                <select class="form-control" asp-for="SocialIds">
                                    @foreach (var social in Model.Socials)
                                    {
                                        <option value="@social.Id">@social.Soci</option>
                                    }
                                </select>

                                <span asp-validation-for="SocialIds" class="text-danger"></span>
                            </div>*@
                            @*<div class="form-group">
                                <label for="exampleInputUsername1">Skill</label>
                                <select class="form-control" asp-for="SkillIds">
                                    @foreach (var skil in Model.Skills)
                                    {
                                        <option value="@skil.Id">@skil.Name</option>
                                    }
                                </select>

                                <span asp-validation-for="SkillIds" class="text-danger"></span>
                            </div>*@


                            <button type="submit" class="btn btn-primary me-2">Submit</button>
                            <button class="btn btn-light">Cancel</button>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


