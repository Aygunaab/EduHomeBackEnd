
@model List<SkillsToTeacher>
@{
    ViewData["Title"] = "Index";
}



<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 stretch-card">
                <div class="card">
                    <div class="card-body">

                        <a asp-controller="TeacherSkill" asp-action="create" class="btn btn-success mb-5 ">Create new  Skill</a>
                        <h4 class="card-title">Skill List</h4>

                        <div class="table-responsive pt-3">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>
                                            id
                                        </th>
                                        <th>
                                            Teacher Name
                                        </th>
                                        <th>
                                            Skill Name
                                        </th>
                                        <th>
                                            Progress
                                        </th>
                                        <th>
                                            Actions
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var skill in Model)
                                    {
                                        <tr class="table-success">
                                            <td>
                                                @skill.Id
                                            </td>
                                            <td>
                                                @skill.Teacher.Name
                                            </td>
                                            <td>
                                                @skill.Skills.Name
                                            </td>
                                            <td>
                                                @skill.Progress
                                            </td>
                                            <td>
                                                <a class="btn btn-primary" asp-controller="Skill" asp-action="Detail" asp-route-id="@skill.Id">Detail</a>
                                                <a class="btn btn-warning" asp-controller="Skill" asp-action="Update" asp-route-id="@skill.Id">Update</a>

                                                <a class="btn btn-warning" asp-controller="Skill" asp-action="Update" asp-route-id="@skill.Id">Delete</a>


                                            </td>

                                        </tr>

                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


