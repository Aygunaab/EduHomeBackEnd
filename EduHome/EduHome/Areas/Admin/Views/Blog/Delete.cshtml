@model Post
@{
    ViewData["Title"] = "Delete";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Databasede olan Bloglar</h4>

                        <div class="table-responsive pt-3">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>
                                            #
                                        </th>
                                        <th>
                                            Image
                                        </th>
                                        <th>
                                            Title
                                        </th>
                                        <th>
                                            Description
                                        </th>
                                        <th>
                                            Action
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>

                                    <tr class="table-info">
                                        <td>
                                            @Model.Id
                                        </td>
                                        <td>
                                            <img src="~/img/slider/@Model.Image" style="width:100px;height:100px;" />
                                        </td>
                                        <td>
                                            @Model.Title
                                        </td>
                                        <td>
                                            @Model.Description
                                        </td>


                                    </tr>

                                </tbody>
                            </table>
                        </div>
                        <p class="text-danger">Silmek istediyinizden eminsinizmi?</p>
                        <a class="btn btn-secondary" asp-action="index">Cancel</a>
                        <form method="post"><button class="btn btn-danger">Sil</button></form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


