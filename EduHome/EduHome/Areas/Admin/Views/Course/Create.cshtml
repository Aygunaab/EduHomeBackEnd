@model CoursePostViewModel
@{
    ViewData["Title"] = "Create";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Create New Slider</h4>
                        <p class="card-description">
                            Basic form layout
                        </p>
                        <form class="forms-sample" method="post" asp-controller="course" asp-action="create" enctype="multipart/form-data">
                            <div class="form-group">
                                <label for="exampleInputUsername1">Title</label>
                                <input asp-for="Title" class="form-control" id="exampleInputUsername1" placeholder="Title">
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="Description">Description</label>
                                <textarea class="form-control" id="Description" asp-for="Description" rows="6"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label for="exampleInputUsername1">Image</label>
                                <input accept="image/*" asp-for="ImageFile" class="form-control" id="exampleInputUsername1" placeholder="Image">
                                <span asp-validation-for="ImageFile" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUsername1">courtText</label>
                                <input asp-for="courtText" class="form-control" id="exampleInputUsername1" placeholder="courtText">
                                <span asp-validation-for="courtText" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUsername1">Start</label>
                                <input asp-for="Start" class="form-control" id="exampleInputUsername1" placeholder="Start">
                                <span asp-validation-for="Start" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUsername1">ClassDuration</label>
                                <input asp-for="ClassDuration" class="form-control" id="exampleInputUsername1" placeholder="ClassDuration">
                                <span asp-validation-for="ClassDuration" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUsername1">Duration</label>
                                <input asp-for="Duration" class="form-control" id="exampleInputUsername1" placeholder="Duration">
                                <span asp-validation-for="Duration" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUsername1">SkillLevel</label>
                                <input asp-for="SkillLevel" class="form-control" id="exampleInputUsername1" placeholder="SkillLevel">
                                <span asp-validation-for="SkillLevel" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUsername1">Language</label>
                                <input asp-for="Language" class="form-control" id="exampleInputUsername1" placeholder="Language">
                                <span asp-validation-for="Language" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUsername1">StudentsCount</label>
                                <input asp-for="StudentsCount" class="form-control" id="exampleInputUsername1" placeholder="StudentsCount">
                                <span asp-validation-for="StudentsCount" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUsername1">Assements</label>
                                <input asp-for="Assements" class="form-control" id="exampleInputUsername1" placeholder="Assements">
                                <span asp-validation-for="Assements" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUsername1">CoursePrice</label>
                                <input asp-for="CoursePrice" class="form-control" id="exampleInputUsername1" placeholder="CoursePrice">
                                <span asp-validation-for="CoursePrice" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUsername1">Categories</label>
                                <select class="form-control" asp-for="CategoryIds">
                                    @foreach (var cat in Model.Categories)
                                    {
                                        <option value="@cat.Id">@cat.Name</option>
                                    }
                                </select>

                                <span asp-validation-for="CategoryIds" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-primary me-2">Submit</button>
                            <button class="btn btn-light">Cancel</button>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

