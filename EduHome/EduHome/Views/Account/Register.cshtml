@model RegisterVm
@{
    ViewData["Title"] = "Register";
}

    <div class="banner-area-wrapper">
        <div class="banner-area text-center">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="banner-content-wrapper">
                            <div class="banner-content">
                                <h2>Register</h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Banner Area End -->
    <!-- Register start -->
    <div class="register-area pt-150 pb-150">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-md-offset-3 text-center">
                    <div class="login">
                        <div class="login-form-container">
                            <div class="login-text">
                                <h2>Register</h2>
                                <span>Please login using account detail bellow.</span>
                            </div>
                            <div class="login-form">
                                <form asp-action="Register" method="post">
                                    <input asp-for="FullName" placeholder="FullName">
                                    <span class="text-danger" asp-validation-for="FullName"></span>
                                    <input asp-for="UserName" placeholder="UserName">
                                    <span class="text-danger" asp-validation-for="UserName"></span>
                                    <input asp-for="Email" placeholder="Email">
                                    <span class="text-danger" asp-validation-for="Email"></span>
                                    <input asp-for="Age" placeholder="Age">
                                    <span class="text-danger" asp-validation-for="Age"></span>
                                    <input asp-for="Position" placeholder="Position">
                                    <span class="text-danger" asp-validation-for="Position"></span>
                                    <input asp-for="Password" placeholder="Password">
                                    <span class="text-danger" asp-validation-for="Password"></span>
                                    <input asp-for="ConfirmPassword" placeholder="ConfirmPassword">
                                    <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                                    <div class="button-box">
                                        <div class="login-toggle-btn">
                                            <input type="checkbox" id="remember">
                                            <label for="remember">Remember me</label>
                                            <a href="#">Forgot Password?</a>
                                        </div>
                                        <button type="submit" class="default-btn">sign up</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Register end -->
 
    
 




