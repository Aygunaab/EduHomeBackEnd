@model LoginVm
@{
    ViewData["Title"] = "Login";
}

<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>Login</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Login start -->
<div class="login-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center">
                <div class="login">
                    <div class="login-form-container">
                        <div class="login-text">
                            <h2>login</h2>
                            <span>Please login using account detail bellow.</span>
                            <div asp-validation-summary="ModelOnly"></div>
                        </div>
                        <div class="login-form">
                            <form asp-action="login" method="post">
                                <input type="text" asp-for="Login" placeholder="Username or Email">
                                <span class="text-danger" asp-validation-for="Login"></span>
                                <input type="password" asp-for="Password" placeholder="Password">
                                <span class="text-danger" asp-validation-for="Password"></span>
                                <div class="button-box">
                                    <div class="login-toggle-btn">
                                        <input asp-for="RememberMe" type="checkbox" class="form-check-input">
                                        <label for="remember">Remember me</label>
                                        <a href="#">Forgot Password?</a>
                                    </div>
                                    <button class="btn btn-block btn-lg font-weight-medium auth-form-btn" type="submit">Login</button>
                                    Don't have an account? <a asp-action="Register" class="text-primary">Create</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Login end -->
