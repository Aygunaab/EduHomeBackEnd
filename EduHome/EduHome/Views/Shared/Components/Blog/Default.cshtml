@model List<Post>

@foreach (var item in Model)
{
    <div class="col-lg-4 col-md-6">
        <div class="single-blog mb-60">
            <div class="blog-img">
                <a href="#"><img src="~/img/slider/@item.Image" alt="blog"></a>
                <div class="blog-hover">
                    <i class="fa fa-link"></i>
                </div>
            </div>
            <div class="blog-content">
                <div class="blog-top">
                    <p>By   /  June 20, 2017  /  <i class="fa fa-comments-o"></i> @item.BlogComments.Count</p>
                </div>
                <div class="blog-bottom">
                    <h2><a href="blog-details.html">@item.Title </a></h2>
                    <a asp-controller="Blog" asp-action="detail" asp-route-id="@item.Id">read more</a>
                </div>
            </div>
        </div>
    </div>
}
