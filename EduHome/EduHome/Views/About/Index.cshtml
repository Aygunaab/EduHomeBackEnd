<!-- Teacher Start -->
<div class="teacher-area pb-150">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section-title text-center">
                    <img src="img/icon/section.png" alt="title">
                    <h2>meet our teachers</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model.Teachers)
            {
                <div class="col-lg-3 col-sm-6">
                    <div class="single-teacher">
                        <div class="single-teacher-img">
                            <a href="teacher-details.html"><img src="img/slider/@item.Image" alt="teacher"></a>
                        </div>
                        <div class="single-teacher-content text-center">
                            <h2><a asp-controller="Teacher" asp-action="Detail" asp-route-id="@item.Id"> @item.Name @item.Surname </a></h2>
                            <h4>Associate Professor</h4>
                            <ul>
                                @foreach (var social in item.SocialToTeachers)
                                {
                                    <li><a target="_blank" href="@social.Link">@Html.Raw(social.Social.Icon)</a></li>

                                }

                            </ul>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>
<!-- Teacher End -->
