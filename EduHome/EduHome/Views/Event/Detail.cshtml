@model EventVm
@{
    ViewData["Title"] = "event / details";
}
   

   
    <!-- Event Details Start -->
    <div class="event-details-area blog-area pt-150 pb-140">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <div class="event-details">
                        <div class="event-details-img">
                            <img     src="~/img/event/@Model.Events.Image" alt="event-details">
                            <div class="event-date">
                                <h3>@Model.Events.Date.ToString("dd") <span>@Model.Events.Date.ToString("MMMM")</span></h3>
                            </div>
                        </div>
                        <div class="event-details-content">
                            <h2>@Model.Events.Title</h2>
                            <ul>
                                <li><span>time : </span>@Model.Events.Time.ToString("t") - @Model.Events.EndTime.ToString("t")</li>
                                <li><span>venue : </span>@Model.Events.Venue</li>
                            </ul>
                            <p>@Model.Events.Description</p>
                            <div class="speakers-area fix">
                                <h4>speakers</h4>
                                @foreach (var item in Model.EventSpeakers)
                                {
                                    <div class="single-speaker">
                                        <div class="speaker-img">
                                            <img     src="~/img/event/@item.Speaker.ProfileImage" alt="speaker">
                                        </div>
                                        <div class="speaker-name">
                                            <h5>@item.Speaker.FullName</h5>
                                            <p>@item.Speaker.Position.Name</p>
                                        </div>
                                    </div>
                                }

                            </div>
                        </div>
                        <div class="reply-area">
                            <h3>LEAVE A REPLY</h3>
                            <p>I must explain to you how all this a mistaken idea of ncing great explorer of the rut<br> the is lder of human happinescias unde omnis iste natus error sit volptatem </p>
                            <form id="contact-form" action="#">
                                <div class="row">
                                    <div class="col-md-12">
                                        <p>Name</p>
                                        <input type="text" name="name" id="name">
                                    </div>
                                    <div class="col-md-12">
                                        <p>Email</p>
                                        <input type="text" name="email" id="email">
                                    </div>
                                    <div class="col-md-12">
                                        <p>Subject</p>
                                        <input type="text" name="subject" id="subject">
                                        <p>Massage</p>
                                        <textarea name="message" id="message" cols="15" rows="10"></textarea>
                                    </div>
                                </div>
                                <a class="reply-btn" href="#" data-text="send"><span>send message</span></a>
                                <p class="form-message"></p>
                            </form>
                        </div>
                    </div>
                </div>
               @await Component.InvokeAsync("SidebarDetailRight");
            </div>
        </div>
    </div>
  
  